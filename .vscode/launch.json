{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Help",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "-h" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Login",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "login" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Refresh Token",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "refresh-token" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Logout",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "logout" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "whoami",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "whoami" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "List Accounts",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "accounts" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Show Balance",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "balance" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "List Transactions",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "transactions", "get" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Get Transaction ${input:transactionID}",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "transactions", "get", "${input:transactionID}" ],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Annotate Transaction ${input:transactionID}",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/monzo",
      "args": [ "transactions", "annotate", "${input:transactionID}", "hello=world", "complex=aren't I?" ],
      "envFile": "${workspaceFolder}/.env"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "transactionID",
      "description": "Transaction ID to test with"
    }
  ]
}
